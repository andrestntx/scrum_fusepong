<%= render "layouts/admin/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
          	<%= link_to 'Projects /', projects_path, class: 'breadcrumb-text' %> 
            <%= link_to "#{ @sprint.project.name } / ", project_path(@sprint.project), class: 'breadcrumb-text' %> 
            Sprint <%= @sprint.number %>
          	<%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-warning' %>    
          </h1>
          
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <!-- Project info -->
    <%= render "sprints/info" %>
    <!-- Sprint dailies  -->
    <%= render "sprints/dailies" %>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->