<%= render "layouts/admin/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            Projects
            <%= link_to 'New Project', new_project_path, class: 'btn btn-success' %>      
          </h1>
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
      <div class="col-xs-12">
        <p id="notice"><%= notice %></p>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Project</th>
              <th>Client</th>
              <th>Started at</th>
              <th colspan="2" class="text-center">Options</th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, project %></td>
                <td><%= project.client %></td>
                <td><%= project.started_at %></td>
                <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning' %></td>
                <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
