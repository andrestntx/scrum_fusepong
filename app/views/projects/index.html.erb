<%= render "layouts/admin/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            Projects
            <%= link_to 'New Project', new_project_path, class: 'btn btn-success' %>      
          </h1>
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
      <div class="col-xs-12">
        <p id="notice"><%= notice %></p>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Project</th>
              <th>Client</th>
              <th>Started at</th>
              <th class="text-center">Cal. Sprints</th>
              <th class="text-center">Sprints</th>
              <th class="text-center">Dailies</th>
              <th class="text-center">Hours</th>
              <th class="text-center">Team</th>
              <th class="text-center">Options</th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, project %></td>
                <td><%= project.client %></td>
                <td><%= project.started_at %></td>
                <td class="text-center"><%= project.calculated_sprints %> </td>
                <td class="text-center"><%= project.sprints.count %> / <%= project.month_sprints_count %> </td>
                <td class="text-center"><%= project.dailies_count %> / <%= project.month_dailies_count %></td>
                <td class="text-center"><%= project.hours %> / <%= project.month_hours %></td>
                <td class="text-center"><%= project.users.count %></td>
                <td class="text-center"><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
