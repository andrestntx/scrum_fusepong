<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :client %>
    <%= f.text_field :client, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :started_at %>
    <%= f.text_field :started_at, class: 'form-control datepicker' %>
  </div>

  <div class="form-group">
    <%= f.label :calculated_sprints %>
    <%= f.number_field :calculated_sprints, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :users %>
    <% User.role('developer').each do |user| %>
      <div class="checkbox">
        <label>
          <%= check_box_tag "project[user_ids][]", user.id, f.object.users.include?(user) %>
          <%= user.name %>
        </label>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>