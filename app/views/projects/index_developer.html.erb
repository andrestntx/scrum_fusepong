<%= render "layouts/developer/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            Projects
          </h1>
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
      <div class="col-xs-12">
        <p id="notice"><%= notice %></p>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Project</th>
              <th>Client</th>
              <th>Started at</th>
              <th class="text-center">Sprints</th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, project_developer_path(project) %></td>
                <td><%= project.client %></td>
                <td><%= project.started_at %></td>
                <td class="text-center"><%= project.sprints.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
