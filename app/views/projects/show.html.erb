<%= render "layouts/admin/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
          	<%= link_to 'Projects /', projects_path, class: 'breadcrumb-text' %> 
            <%= @project.name %>
          	<%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-warning' %>    
          </h1>
          
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <!-- Project info -->
    <div class="col-xs-12 col-sm-5">
      <p id="notice"><%= notice %></p>
    	<p>
    	  <strong>Description:</strong>
    	  <%= @project.description %>
    	</p>
      <p>
        <strong>Client:</strong>
        <%= @project.client %>
      </p>
      <p>
        <strong>Started at:</strong>
        <%= @project.started_at %>
      </p>
    </div>

    <!-- Project sprints  -->
    <div class="col-xs-12 col-sm-7">
      <!-- New Project Sprint  -->
      <h2 class="h4">New Sprint:</h2>
      <%= form_for([@project, @project.sprints.build], html: { class: 'form-inline' }) do |f| %>
        <div class="form-group">
          <%= f.number_field :number, class: 'form-control', placeholder: 'Number' %>
        </div>

        <div class="form-group">
          <%= f.text_field :started_at, class: 'form-control datepicker', placeholder: 'Started at' %>
        </div>

        <div class="form-group">
          <%= f.number_field :weeks, class: 'form-control', placeholder: 'Weeks' %>
        </div>

        <%= f.submit 'Create', class: 'btn btn-primary'%>
      <% end %>
      <!-- Project Sprint Table  -->
      <div class="row">
        <div class="col-xs-12">
          <p id="notice"><%= notice %></p>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Number</th>
                <th>Started at</th>
                <th>Weeks</th>
              </tr>
            </thead>

            <tbody>
              <% @project.sprints.each do |sprint| %>
                <tr>
                  <td><%= link_to "Sprint #{sprint.number}", [@project, sprint] %></td>
                  <td><%= sprint.started_at %></td>
                  <td><%= sprint.weeks %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.col-xs-12 -->
      </div>
      <!-- /.row -->
    </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->