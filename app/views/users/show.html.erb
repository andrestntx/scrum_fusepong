<%= render "layouts/admin/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
          	<%= link_to 'Team /', users_path, class: 'breadcrumb-text' %> 
            <%= @user.name %>
          </h1>
          
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <!-- User projects  -->
    <div class="col-xs-12">
      <!-- User Sprint Table  -->
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Project</th>
                <th>Client</th>
                <th>Started at</th>
                <th class="text-center">Sprints</th>
                <th class="text-center">Dailies</th>
                <th class="text-center">Hours</th>
              </tr>
            </thead>

            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= link_to project.name, project %></td>
                  <td><%= project.client %></td>
                  <td><%= project.started_at %></td>
                  <td class="text-center"><%= project.sprints.count %> / <%= project.month_sprints_count %></td>
                  <td class="text-center"><%= project.month_dailies_count %> / <%= project.dailies_count %></td>
                  <td class="text-center"><%= project.month_hours %> / <%= project.hours %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.col-xs-12 -->
      </div>
      <!-- /.row -->
    </div>
    <div class="col-xs-12">
      <hr>
      <!-- User Calendar  -->
      <div id="calendar" data-userid="<%= @user.id %>"></div>
    </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->