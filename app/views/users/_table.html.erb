<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th class="text-center">Dailies</th>
      <th class="text-center">Hours</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td class="text-center"><%= user.dailies_count %></td>
        <td class="text-center"><%= user.hours %></td>              
      </tr>
    <% end %>
  </tbody>
</table>