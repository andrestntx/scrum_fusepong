<div class="col-xs-12 col-sm-7">
  <!-- User Sprint Table  -->
  <h2 class="h4">Projects:</h2>
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Client</th>
            <th>Started at</th>
            <th class="text-center">Sprints</th>
          </tr>
        </thead>

        <tbody>
          <% @user.projects.each do |project| %>
            <tr>
              <td><%= link_to project.description, project_developer_path(project) %></td>
              <td><%= project.client %></td>
              <td><%= project.started_at %></td>
              <td class="text-center"><%= project.sprints.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.col-xs-12 -->
  </div>
  <!-- /.row -->
</div>