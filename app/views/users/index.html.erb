<%= render "layouts/admin/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            Team
          </h1>
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
      <div class="col-sm-12">
        <p id="notice"><%= notice %></p>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th class="text-center">Projects</th>
              <th class="text-center">Dailies</th>
              <th class="text-center">Hours </th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to user.name, user %></td>
                <td><%= user.email %></td>
                <td class="text-center"><%= user.projects.count %></td>
                <td class="text-center"><%= user.dailies_count %></td>
                <td class="text-center"><%= user.hours %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
