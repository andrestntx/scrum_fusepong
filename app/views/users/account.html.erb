<%= render "layouts/developer/navbar" %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
            <%= link_to 'Users /', users_developer_path, class: 'breadcrumb-text' %> 
            <%= @user.name %>
          </h1>
          
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <!-- User info -->
    <%= render "users/info" %>
    <!-- User projects  -->
    <%= render "users/developer_projects" %>
    <!-- User dailies  -->
    <div class="col-xs-12">
      <h2 class="h4">Dailies:</h2>
      <hr>
      <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">      
          <%= form_tag(dailies_path(@user, @user.dailies.build), html: { class: '' }) do %>
            
            <div class="form-group">
              <%= collection_select :daily, :project_id, @projects, :id, :name, {}, {class: "form-control", placeholder: "Projects"} %>
            </div>

            <div class="form-group">
            <%= select :daily, :time, options_for_select([['Part time', 'part'], ['Full time', 'full']]), {}, { class: 'form-control' } %>
            </div>

            <div class="form-group">
              <%= text_area :daily, :comments, { class: 'form-control', placeholder: 'Comments' } %>
            </div>
            
            <%= submit_tag 'New Daily', class: 'btn btn-primary'%>
          <% end %>
        </div>
        <div class="col-md-9 col-sm-6 col-xs-12">
          <%= render "users/dailies" %>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->